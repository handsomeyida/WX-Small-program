<!--pages/login/login.wxml-->
<view class="main">
    <view style='width:20%;display:inline-block;height:100%;margin-left: 11%'>
        <image src="../../icons/timg.jpg" style='width: 600rpx'></image>
    </view>
    <view style='width:70%;margin-left:15%;'>
        <view style='border-top-left-radius:8px;border-top-right-radius:8px;width:100%;height:38px;display:inline-block;background:#fff;'>
            <view style='width:20%;display:inline-block;height:100%;'>
                <image src='../../icons/user.svg' style='display:inline;' mode="aspectFit"></image>
            </view>
            <input style='width:80%;display:inline-block;height:100%;' placeholder-style='font-size:12px;' name="userName" placeholder="请输入用户名"
            bindinput ="userNameInput"></input>
        </view>
        <view style='width:100%;height:38px;display:inline-block;background:#fff;margin-top:-5px;border-top:1px solid #f8f8f8;border-bottom-left-radius:8px;border-bottom-right-radius:8px;'>
            <view style='width:20%;display:inline-block;height:100%;'>
                <image src='../../icons/password.svg' style='display:inline' mode="aspectFit"></image>
            </view>
            <input style='width:80%;display:inline-block;height:100%;' placeholder-style='font-size:12px;' password placeholder="请输入密码"
            bindinput="passWdInput"></input>     
        </view>
       </view> 
    <view class="viewName" style="margin-top: 20rpx;">
        <button class="loginBtn" bindtap="loginBtnClick" style="width:200rpx; background:#7674e7; color: white">登录</button>
    </view>
</view>
